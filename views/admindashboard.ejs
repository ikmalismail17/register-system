<%- include('adminlayout.ejs') %> 
<div class="container">
    <div class="row text-center">
            <h3  style="font-size: 70px; font-weight: bold;">Welcome Admin</h3>
            <h3 style="font-size: 50px;" class="text-uppercase font-monoscope"><strong><span style="color: blue;">
            Admin</h3> 
    </div>
    <div class="row mt-5">
        <div class="card">
            <div class="card-header">
                <h4>List of Student</h4>
            </div>
            <div class="card-body">
                <table class="table table-success mt-4 text-center">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <%
                            var i=1;
                            students.forEach(function (student) { %>
                      <tr>
                        <th scope="row"><%- i %></th> 
                        <td><%= student._id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td>
                            <a href="/deleteStudent/<%- student._id %>" onclick="return deleteItem()" class="btn btn-warning">Delete</a>
                        </td>
                      </tr>
                      <% i++}) %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</div>
<script>
    function deleteItem() {
      var x = confirm("Are you sure");
      if (x == true){
        return true;
      }else{
        return false;
      }
    }
</script>
</body>

</html>