<%- include('userlayout.ejs'); %> 
<div class="container">
    <div class="row text-center">
            <h3  style="font-size: 70px; font-weight: bold;">COURSE</h3>
    </div>
    <div class="row p-3 justify-content-center  text-center">
        <div class="col-md-8">
            <form action="" method="post">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3>Course Option</h3>
                    </div>
                    <div class="card-body">
                        <label for="course-sel">Select the course :</label>
                        <input type="text" id="course-sel"list="course-list" class="ms-3">
                        <datalist id="course-list">
                            <% courses.forEach( (courses)=>{ %>
                                <option value="<%= courses.name %>">
                            <% }); %> 
                        </datalist>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header bg-primary">
                        <h3>Course code</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                           <% courses.forEach((courses)=>{
                               if(courses.name == courses.name){
                            %>
                             <input type="text" value="<%= courses.code %>" disabled>
                           <% 
                               }
                           }) 
                           %>  
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header bg-primary">
                        <h3>Course Duration</h3>
                    </div>
                    <div class="card-body">
                        <div class="card-body">
                            <input type="text" disabled>
                        </div>
                    </div>
                </div>
                <a class="btn btn-warning mt-2">Submit</a>
            </form>
            
        </div>
    </div>
</div>
</body>

</html>