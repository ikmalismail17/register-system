<%- include('userlayout.ejs'); %> 
<div class="container">
    <div class="row text-center">
            <h3  style="font-size: 70px; font-weight: bold;">COURSE</h3>
    </div>
    <div class="row p-3 justify-content-center  text-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header ">
                    <h1>Course Registration</h1>
                </div>
                <div class="card-body">
                    <label for="course-sel">Select the course :</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" id="course-sel" list="course-list" class="ms-3">
                    <datalist id="course-list">
                        <% courses.forEach( (courses)=>{ %>
                            <option value="<%= courses.name %> - <%= courses.code %> ">
                        <% }); %> 
                    </datalist>
                    <a href="" class="btn btn-warning ms-3"> Submit </a>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>